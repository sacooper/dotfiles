function compile_tex(){
    printf "Progress: [                    ]  0%%"
    for i in {1..5}; do
        pdflatex_fix "$1" &>/dev/null;
        printf "\rProgress: ["
        for j in {1..5}; do
            if [ $j -lt $i ]; then 
                printf "===="
            elif [ $j -eq $i ]; then
                printf "===>"
            else
                printf "    "
            fi
        done
        printf "] %2s%%" $((i*20))
    done
    echo
    rubber --clean "$1"
}

function set_vol() {
    vol="$(echo "$1*65535" | bc | sed 's/\..*//')"
    pacmd set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo "$vol"
}

function aur_dl(){
